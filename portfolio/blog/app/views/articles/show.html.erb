<main>
  <div class="container">
    <div class="row">
      <div class="col s12 m12">
        <div class="card white">
          <div class="card-content black-text">
            <%= simple_format(@article.text) %>
          </div>
          <div class="card-action">
            <span class="btn">
              <%= link_to 'EDIT', "/articles/#{@article.id}/edit", method: :get, :style=>"color:white;" %>
            </span>
            <span class="btn">
              <%= link_to 'DESTROY', "/articles/#{@article.id}", method: :delete, :style=>"color:white;" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
